<div>
    <div class="btn btn-primary">

        <a asp-action="Edit" asp-route-id="@Model.LessonId" style="color:whitesmoke">Edit</a>
    </div>
    <div class="btn btn-secondary">

        <a asp-action="Index" style="color:whitesmoke">Back to list</a>
    </div>
</div>
